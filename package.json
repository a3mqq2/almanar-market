{
  "$schema": "https://www.schemastore.org/package.json",
  "name": "almanar-market",
  "version": "1.0.0",
  "description": "نظام نقاط البيع - المنار ماركت",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",

  "scripts": {
    "build": "vite build",
    "dev": "vite",

    "electron:dev": "electron .",
    "desktop": "electron .",

    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",

    "postinstall": "electron-builder install-app-deps"
  },

  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "axios": "^1.11.0",
    "concurrently": "^9.0.1",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "laravel-vite-plugin": "^2.0.0",
    "tailwindcss": "^4.0.0",
    "vite": "^7.0.7"
  },

  "dependencies": {
    "electron-store": "^8.0.0"
  },

  "build": {
    "appId": "com.almanar.market",
    "productName": "Almanar Market POS",
    "directories": {
      "output": "dist"
    },

    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },

    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico"
    },

    "asar": false,

    "files": [
      "electron/**/*",
      "public/**/*",
      "resources/views/**/*",
      "routes/**/*",
      "app/**/*",
      "bootstrap/**/*",
      "config/**/*",
      "database/**/*",
      "storage/**/*",
      "vendor/**/*",
      "artisan",
      ".env"
    ],

    "extraResources": [
      {
        "from": "php",
        "to": "php",
        "filter": ["**/*"]
      }
    ]
  }
}
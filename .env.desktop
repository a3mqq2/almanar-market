APP_NAME="المنار ماركت"
APP_ENV=local
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=http://127.0.0.1:8000

# Desktop Mode
DESKTOP_MODE=true
SERVER_URL=https://testing.manarmarket.ly

# SQLite Database (Local)
